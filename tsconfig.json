{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["api", "firebase", "types"],
  "exclude": ["node_modules", "dist"]
}
